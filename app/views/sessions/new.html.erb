<h1>Connexion</h1>
<%= form_with url: login_path do %>

  <%# handling error messages %>
  <%# errors messages are stored into an array of strings %>
  <% if defined? @error_messages&.any? %>
    <%= display_form_errors(@error_messages) %>
  <% end %>

  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>

  <div class="field">
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </div>

  <div class="actions">
    <%= submit_tag "Se connecter" %>
  </div>
<% end %>

<%# Forgotten password and register link %>
<div class="links">
  <%= forgot_password_link("Mot de passe oubliÃ© ?",class_name="btn btn-secondary") %>
  <%= register_button("Inscription", class_name="btn btn-secondary") %>
</div>