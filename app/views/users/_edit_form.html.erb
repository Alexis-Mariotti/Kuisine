<%= form_with model: @user, method: :put do |f| %>
  <%= display_form_errors(@error_messages) %>

  <div class="field">
    <%= f.label :username, "Nom d'utilisateur" %>
    <%= f.text_field :username, required: true %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, required: true %>
  </div>

  <div class="field">
    <%= label_tag :suscribe_newsletter?, "Recevoir la newsletter ?" %>
    <%= check_box_tag :suscribe_newsletter?, checked: @user.subscribed_to_newsletter?%>
  </div>


  <div class="field">
    <%= f.label :password, "Nouveau mot de passe" %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirmation" %>
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="actions">
    <%= f.submit "Mettre Ã  jour", class: "btn btn-primary" %>
  </div>
<% end %>